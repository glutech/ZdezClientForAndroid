<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abs__background_holo_dark"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abs__action_bar_default_height"
        android:background="@color/divider_blue"
        android:orientation="horizontal" >
    </LinearLayout>


    <LinearLayout
        android:id="@+id/news_layout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@drawable/slide_button_1"
        android:clickable="true"
        android:onClick="to_news"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:src="@drawable/status" />

        <TextView
            android:id="@+id/menu_news"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="热点资讯"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_blue" />

    <LinearLayout
        android:id="@+id/notice_layout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@drawable/slide_button_1"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:src="@drawable/camp" />

        <TextView
            android:id="@+id/menu_notice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="校园通知"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_blue" />

    <LinearLayout
        android:id="@+id/zdez_layout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@drawable/slide_button_1"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:src="@drawable/view" />

        <TextView
            android:id="@+id/menu_zdez"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="找得着"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_blue" />

</LinearLayout>