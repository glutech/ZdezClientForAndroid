<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ListView
        android:id="@+id/a_activity_list_query"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/a_panel_bg_light"
        android:divider="@color/a_transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abs__ab_bottom_solid_light_holo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="@dimen/a_text_size_small"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_a_list_item_activity_list_time"/>
                <Spinner
                    android:id="@+id/a_activity_query_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/a_activity_query_time"
                    style="@style/a_SpinnerOnBottomBar"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="@dimen/a_text_size_small"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_a_list_item_activity_list_category"/>
                <Spinner
                    android:id="@+id/a_activity_query_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/a_activity_query_category"
                    style="@style/a_SpinnerOnBottomBar"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>