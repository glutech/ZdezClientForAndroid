<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WelcomeActivity" >

    <ImageView
        android:id="@+id/welcome_launcher"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/welcome_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dip"
        android:gravity="center"
        android:text="\n\n\n找得着\n\n校园通知系统\n\n昆明博客科技\n\n" />

    <TextView
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="请手动卸载之前的版本"
        android:textColor="@color/red"
        android:textSize="17dp"
        android:visibility="invisible"
        android:layout_below="@id/welcome_info"
         />

</RelativeLayout>