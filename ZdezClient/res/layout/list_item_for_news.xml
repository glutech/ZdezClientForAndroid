<?xml version="1.0" encoding="utf-8"?>
<cn.com.zdezclient.layouts.NewsListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dip" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/cover"
            android:lines="2"
            android:padding="5dip"
            android:text="不用看了，这就是标题，就是标题，是标题，标题，题题"
            android:textSize="16sp" />

        <com.loopj.android.image.SmartImageView
            android:id="@id/cover"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:cropToPadding="true"
            android:padding="5dip"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/clock"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/title"
            android:src="@drawable/access_time" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/clock"
            android:padding="5dip"
            android:text="2013年7月15日" />
    </RelativeLayout>

</cn.com.zdezclient.layouts.NewsListItem>