<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- border -->
    <item
        android:top="0dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/a_border_dark" />
        </shape>
    </item>
    <!-- bg, recover unused border -->
    <item
        android:top="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:bottom="1.5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/a_panel_bg_dark" />
            <corners android:radius="1dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp"/>
        </shape>
    </item>
</layer-list>